<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/imageViewProfileLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMessageLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bubble_chat_left"
        android:maxWidth="300dp"
        android:paddingBottom="8dp"
        android:paddingEnd="8dp"
        android:paddingStart="18dp"
        android:paddingTop="8dp"
        android:textColor="@color/colorTextBlack"
        app:layout_constraintStart_toEndOf="@id/imageViewProfileLeft"
        app:layout_constraintTop_toTopOf="@+id/textViewNameLeft" />

    <TextView
        android:id="@+id/textViewTimeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="4dp"
        android:textSize="7sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/textViewMessageLeft"
        app:layout_constraintStart_toEndOf="@id/textViewMessageLeft" />

    <TextView
        android:id="@+id/textViewNameLeft"
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textSize="6sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewMessageLeft"
        app:layout_constraintStart_toStartOf="@+id/textViewMessageLeft"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>