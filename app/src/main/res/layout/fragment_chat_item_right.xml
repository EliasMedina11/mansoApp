<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_editor_absoluteX="0dp"
    app:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/imageViewProfileRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/manso_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMessageRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bubble_chat_right"
        android:maxWidth="300dp"
        android:paddingBottom="8dp"
        android:paddingEnd="18dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/colorTextBlack"
        app:layout_constraintEnd_toStartOf="@id/imageViewProfileRight"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textViewTimeRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="4dp"
        android:textSize="7sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@id/textViewMessageRight"
        app:layout_constraintEnd_toStartOf="@id/textViewMessageRight"
        />

    <TextView
        android:id="@+id/textViewNameRight"
        android:layout_width="wrap_content"
        android:layout_height="11dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textSize="6sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewMessageRight"
        app:layout_constraintStart_toStartOf="@+id/textViewMessageRight"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>